@page
@model QuartzWebScheduler.Web.Areas.Admin.Pages.Auths.BearerModel
@{
}

<div class="container p-3">
    <form method="post">
        <input asp-for="BearerToken.Id" type="hidden" />
        <div class="row pt-4 align-items-center">
            <div class="row pb-2">
                <h2 class="text-primary">BearerToken</h2>
                <hr />
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="BearerToken.Token" class="form-control" aria-required="true" />
                <label asp-for="BearerToken.Token"></label>
                <span asp-validation-for="BearerToken.Token" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-6">
                <button class="w-100 btn btn-lg btn-primary" asp-area="Admin" asp-page="/Auths/Bearer">Save</button>
            </div>
            <div class="form-floating py-2 col-6">
                <a class="btn btn-outline-secondary w-100" asp-area="" asp-page="/Index">Back to Dashboard</a>
            </div>
        </div>
    </form>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}