@page
@model QuartzWebScheduler.Web.Areas.Admin.Pages.Users.DeleteModel
@{
}

<div class="container p-3">
    <form method="post">
        <input asp-for="User.Id" type="hidden"/>
        <div class="row pt-4 align-items-center">
            <div class="row pb-2">
                <h2 class="text-primary">Delete User</h2>
                <hr/>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-floating py-2 col-6">
                <input asp-for="User.Email" class="form-control" aria-required="true" disabled=""/>
                <label asp-for="User.Email"></label>
                <span asp-validation-for="User.Email" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-6">
                <input asp-for="UserRole" class="form-control" aria-required="true" disabled=""/>
                <label asp-for="UserRole"></label>
            </div>
            <div class="form-floating py-2 col-6">
                <button class="w-100 btn btn-lg btn-primary" asp-area="Admin" asp-page="/Users/Delete" asp-route-id="@Model.User.Id">Delete User</button>
            </div>
            <div class="form-floating py-2 col-6">
                <a class="btn btn-outline-secondary w-100" asp-area="Admin" asp-page="/Users/Index">Back to list</a>
            </div>
        </div>
    </form>
</div>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}