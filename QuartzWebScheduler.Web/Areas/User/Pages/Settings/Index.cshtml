@page
@model QuartzWebScheduler.Web.Areas.User.Pages.Settings.IndexModel
@{
}
<div class="container p-3">
    <form method="post">
        <input asp-for="User.Id" type="hidden"/>
        <div class="row pt-4 align-items-center">
            <div class="row pb-2">
                <h2 class="text-primary">Settings</h2>
                <hr />
            </div>
            <div asp-validation-summary="None" class="text-danger"></div>
            <div class="form-floating py-2 col-6">
                <input asp-for="User.Email" class="form-control" aria-required="true" disabled="" />
                <label asp-for="User.Email"></label>
            </div>
            <div class="form-floating py-2 col-6">
                <input asp-for="UserRole" class="form-control" aria-required="true" disabled="" />
                <label asp-for="UserRole"></label>
            </div>
            <div class="col-6">
                <a class="btn btn-outline-warning w-100" asp-area="User" asp-page="/Settings/Reset">
                    <i class="bi bi-slash-square"></i>&nbsp;Reset Password
                </a>
            </div>
            <div class="col-6">
                <a class="btn btn-outline-danger w-100" asp-area="User" asp-page="/Settings/Delete">
                    <i class="bi bi-x-square"></i>&nbsp;Delete
                </a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}