@page
@model QuartzWebScheduler.Web.Areas.Quartz.Pages.Quartz_Jobs.EditModel
@{
}

<div class="container p-3">
    <form method="post">
        <input asp-for="QuartzJobConfig.Id" type="hidden" />
        <div class="row pt-4 align-items-center">
            <div class="row pb-2">
                <h2 class="text-primary">Delete Quartz Job</h2>
                <hr />
            </div>
            <div class="form-floating py-2 col-6">
                <input asp-for="QuartzJobConfig.JobName" class="form-control" aria-required="true" />
                <label asp-for="QuartzJobConfig.JobName"></label>
                <span asp-validation-for="QuartzJobConfig.JobName" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-6">
                <input asp-for="QuartzJobConfig.GroupName" class="form-control" aria-required="true" />
                <label asp-for="QuartzJobConfig.GroupName"></label>
                <span asp-validation-for="QuartzJobConfig.GroupName" class="text-danger"></span>
            </div>
            <div class="form-check py-2 col-6">
                <input asp-for="QuartzJobConfig.IsActive" class="form-check-input" type="checkbox" />
                <label asp-for="QuartzJobConfig.IsActive" class="form-check-label"></label>
                <span asp-validation-for="QuartzJobConfig.IsActive" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-6">
                <input asp-for="QuartzJobConfig.CronExpression" class="form-control" aria-required="true" />
                <label asp-for="QuartzJobConfig.CronExpression"></label>
                <span asp-validation-for="QuartzJobConfig.CronExpression" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="QuartzJobConfig.Url" class="form-control" aria-required="true" />
                <label asp-for="QuartzJobConfig.Url"></label>
                <span asp-validation-for="QuartzJobConfig.Url" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-6">
                <button class="w-100 btn btn-lg btn-primary" asp-area="Quartz" asp-page="/Quartz_Jobs/Edit" asp-route-id="@Model.QuartzJobConfig.Id">Edit Quartz Job</button>
            </div>
            <div class="form-floating py-2 col-6">
                <a class="btn btn-outline-secondary w-100" asp-area="Quartz" asp-page="/Quartz_Jobs/Index">Back to list</a>
            </div>
        </div>
    </form>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}