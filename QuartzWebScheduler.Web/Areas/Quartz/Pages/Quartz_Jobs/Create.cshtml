@page
@model QuartzWebScheduler.Web.Areas.Quartz.Pages.Quartz_Jobs.CreateModel
@{
}

<div class="container p-3">
    <form method="post">
        <div class="row pt-4 align-items-center">
            <div class="row pb-2">
                <h2 class="text-primary">Create Quartz Job</h2>
                <hr />
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-floating py-2 col-6">
                <input asp-for="QuartzJobConfig.JobName" class="form-control" aria-required="true" />
                <label asp-for="QuartzJobConfig.JobName"></label>
                <span asp-validation-for="QuartzJobConfig.JobName" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-6">
                <input asp-for="QuartzJobConfig.CronExpression" class="form-control" aria-required="true" />
                <label asp-for="QuartzJobConfig.CronExpression"></label>
                <span asp-validation-for="QuartzJobConfig.CronExpression" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="QuartzJobConfig.Url" class="form-control" aria-required="true" />
                <label asp-for="QuartzJobConfig.Url"></label>
                <span asp-validation-for="QuartzJobConfig.Url" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-6">
                <button class="w-100 btn btn-lg btn-primary" asp-area="Quartz" asp-page="/Quartz_Jobs/Create">Create Quartz Job</button>
            </div>
            <div class="form-floating py-2 col-6">
                <a class="btn btn-outline-secondary w-100" asp-area="Quartz" asp-page="/Quartz_Jobs/Index">Back to list</a>
            </div>
        </div>
    </form>
</div>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}